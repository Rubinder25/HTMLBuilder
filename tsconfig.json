{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es6",
        "esnext.asynciterable"
      ],
      // https://www.typescriptlang.org/docs/handbook/module-resolution.html
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": false,
      "diagnostics": false,
      "pretty": true,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "declaration": true,
      "noUnusedLocals": true,
      "outDir": "lib"
    },
    "include": [
      "src/**/*",
      "src/gqlTypes.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/__mocks__/*"
    ]
  }